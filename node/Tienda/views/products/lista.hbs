<h2>Lista de productos</h2>

<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Departamento</th>
        <th>Precio</th>
        <th>Activo</th>
        <th>Acciones</th>
    </tr>
    {{#each arrProductos as |prod|}}
    <tr>
        <td>{{prod.nombre}}</td>
        <td>{{prod.departamento}}</td>
        <td>{{prod.precio}}</td>
        <td>{{prod.activo}}</td>
        <td>
            <a href="/products/{{prod._id}}" class="btn btn-sm btn-info">Ver</a>
            <a href="/products/edit/{{prod._id}}" class="btn btn-sm btn-primary">Editar</a>
            <a href="/products/delete/{{prod._id}}" class="btn btn-sm btn-danger"
                onclick="return confirm('¿Estás seguro de borrar el producto?');">Borrar</a>
        </td>
    </tr>
    {{/each}}
</table>